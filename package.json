{
  "name": "collabverse-monorepo",
  "private": true,
  "version": "0.1.0",
  "engines": { "node": ">=20 <21", "pnpm": ">=9" },
  "scripts": {
    "dev": "pnpm --filter @collabverse/web dev",
    "build": "pnpm --filter @collabverse/web build",
    "start": "pnpm --filter @collabverse/web start",
    "lint": "eslint .",
    "test": "jest -u",
    "test:e2e": "playwright test",
    "verify": "pnpm -w lint && pnpm --filter @collabverse/web typecheck && pnpm --filter @collabverse/web build && pnpm test && pnpm test:e2e && pnpm verify:routes && npx vercel build --prod",
    "verify:routes": "node apps/web/scripts/verify-routes.mjs",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.4",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unused-imports": "^3.1.0",
    "globby": "^14.0.1",
    "husky": "^9.1.6",
    "prettier": "^3.3.2",
    "typescript": "5.5.3",
    "@types/node": "^20.12.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "@types/jest": "^29.5.12",
    "@playwright/test": "^1.46.0",
    "vercel": "^34.2.0"
  },
  "packageManager": "pnpm@9.12.2"
}
